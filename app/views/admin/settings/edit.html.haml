%h1 Site Settings
= simple_form_for @settings, :url => admin_settings_path do |f|
  = f.input :site_availability, :as => :radio, :collection => SiteAvailability.for_form, :wrapper_html => { :class => "site_availability" }
  .clear
  = f.input :maintenance_message, :as => :text, :input_html => { :rows => 5 }
  = f.button :submit, "Save", :class => "small_button"
